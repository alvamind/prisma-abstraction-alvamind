{
  "name": "prisma-abstraction-alvamind",
  "version": "1.0.7",
  "description": "Type-safe repository pattern abstraction for Prisma",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/alvamind/prisma-abstraction-alvamind.git"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "dev": "bun tsc --watch",
    "compose": "docker compose up -d",
    "commit": "commit",
    "reinstall": "bun clean && bun install",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "source": "generate-source --exclude=**/dist/**,.gitignore,bun.lockb,*md --output=source.md",
    "clean": "rimraf dist node_modules",
    "build:tgz": "bun run build && bun pm pack",
    "test": "bun test test/*.test.ts",
    "split-code": "split-code source=combined.md markers=nats-alvamind/ outputDir=./output",
    "publish-npm": "npm version patch && npm publish",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "test:with-db": "docker compose up -d && bun test && docker compose down",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "prisma",
    "repository",
    "typescript",
    "orm",
    "database",
    "cache"
  ],
  "author": "alvamind",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "alvamind-tools": "^1.0.23",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/bun": "^1.1.16",
    "bun-types": "^1.1.43",
    "prisma": "^6.2.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.3",
    "@types/node": "^20.10.5",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "@prisma/client": "^6.2.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "commonjs"
}
