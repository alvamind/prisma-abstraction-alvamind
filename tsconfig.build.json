{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "composite": true,
    "incremental": true,
    "stripInternal": true,
    "noEmitOnError": true
  },
  "exclude": ["node_modules", "test", "dist", "**/*.spec.ts", "**/*.test.ts", "examples", "docs"],
  "include": ["src/**/*"]
}
